<div id="expense_tile_template" style="display: none;">
    
    <div class="tile" id="expense_{{id}}">
      <div class="front">
        
        <div class="content">  
        
          <h2 class="tile_title">{{title}}</h2>
          <h3 class="amount">{{amount}}</h3>
          <p style="position: absolute; top: 80px;" class="due_in">Due in XX days</p>
          <div class="actions">
            <a href="#expenses/{{id}}/edit"><i class="icon-edit icon-large"></i></a>
          </div>

        </div>

      </div>
      <div class="back">
        <div class="content">
          <div class="actions">
            <a href="#expenses/{{id}}/remove" class="btn btn-danger btn-small"><i class="icon-trash"></i> Delete</a>
          </div>
        </div>
      </div>
    </div>

</div>