.modal-header
  .close{"data-dismiss" => "modal", :href => "javascript:void(0)"} x
  %h3 Expenses

.modal-body
  %div{:id => "notice"}
  =semantic_form_for @expense, :html => {:class => "form-horizontal well", :id => "expense"} do |f|
    = f.input :isfixed, :as => :hidden
    = f.input :auto_withdrawal, :as => :hidden
    %fieldset
      .control-group
        = f.label :title, :class => 'control-label'
        .controls
          = f.text_field :title,
                         :class => 'text_field required',
                         :placeholder => "ex: Groceries, Student Loan, Gas"

      .control-group
        = f.label :amount, :class => 'control-label'
        .controls
          %div{:class => "input-prepend"}
            %span.add-on $
            = f.text_field :amount,
                           :class => 'text_field span1',
                           :onkeyup => "this.value = this.value.replace(/[\$,]/g,'')"

      .control-group
        = f.label :expense_date, :class => "control-label"
        .controls
          = f.text_field :expense_date, :class => 'text_field datepicker span2'

      .control-group
        = f.label :frequency, :class => 'control-label'
        .controls
          = f.input :frequency,  :as => :select,  :collection => ["One Time","Weekly","Bi-Weekly", "Bi-Monthly", "Monthly","Annually"], :label => false
          %p.help-block "How often do you have this expense?"

.modal-footer
  - if @expense.persisted?
    %a{:href => "#", :class => "btn btn-primary", :id => "btn_update_expense", :expense_id => @expense.id} Update
  - else
    %a{:href => "#", :class => "btn btn-primary", :id => "btn_save_expense"} Create
  %a{:href => "#", :class => "btn", "data-dismiss" => "modal"} Cancel

:javascript
  $(".datepicker").datepicker({ dateFormat: "yy-mm-dd" });